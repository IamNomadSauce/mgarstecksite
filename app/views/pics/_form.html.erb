<%= render "shared/errors", obj: @pic %>

<div class="row">
  <div class="col-md-12">
    <%= simple_form_for @pic, html: {multipart: true} do |f| %>
        <div class = 'form-group'>
          <div class="control-label col-sm-offset-2 col-sm-8">
            <%= f.input :image, input_html: {class: 'form-control'} %>
          </div>
        </div>
        <div class = 'form-group'>
          <div class="control-label col-sm-offset-2 col-sm-8">
            <%= f.input :title, input_html: {class: 'form-control'} %>
          </div>
        </div>
        <div class = 'form-group'>
          <div class="control-label col-sm-offset-2 col-sm-8">
            <%= f.input :description, input_html: {class: 'form-control'} %>
          </div>
        </div>
        <div class="col-sm-offset-2 col-sm-12">
          <%= f.button :submit, class: "btn btn-primary" %> <%= link_to "Cancel", pics_path, class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

