<div id="pic_show">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="center panel panel-heading pic_image">
          <%= image_tag @pic.image.url(:medium)%>
        </div>

        <div class="panel-body center">
          <h3><%= @pic.title.upcase %></h3>
          <p> <%= @pic.description %></p>
        </div>

        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <p>by: <%= @pic.user.email.upcase %></p>
            </div>
            <div class="btn-group pull-right">
              <% if current_user == @pic.user %>
                  <%= link_to "Edit", edit_pic_path, class: 'btn btn-primary btn-lg' %>
                  <%= link_to "Destroy", pic_path, class: 'btn btn-primary btn-lg', method: :delete, data: {confirm: "Are you sure?"} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




