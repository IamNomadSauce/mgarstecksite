<p id="notice"><%= notice %></p>


<%= render 'sidebar' %>
  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><span class="glyphicon glyphicon-th-list"></span></a>

        <div class="col-md-8 col-md-offset-2">
          <div class="page-header">
            <h1 class="center">Main Controller Page: </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<div id="row" class="transitions-enabled">
  <% @clients.each do |client| %>
      <div class="panel panel-info" align="center">
        <div class="box panel-heading panel-default">
          <%= client.firstname.upcase %> <%= client.lastname.upcase %>
        </div>
        <div class="panel-body center">
          <%= client.description %>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-8 col-offset-2">
              <%= client.email %>, <%= client.phone %>
              <div class="btn-group pull-right">
                <% if user_signed_in? %>
                    <%= link_to 'Edit', edit_client_path(client) %>
                    <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
        </div>
      </div>
  <% end %>
</div>

<%= link_to 'New Client', new_client_path %>